<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TP"/>

    <style name="TP.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="TP.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

    <style name="TP.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>